<%# @user is persisted: action: "/users/:id" PATCH -> update %>
<%# @user is NOT persisted: action: "/users" POST  -> create %>
<%= simple_form_for @user, url: users_path, html: {class: "form-horizontal"} do |f| %>
  <%= f.input :first_name, input_html: {placeholder: "e.g. John"} %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <!-- <%#= f.input :avatar %> -->
  <div>
    <% if @user.persisted? %>
      <p>You must enter the password for changed to take effect</p>
      <%= f.input :current_password %>
    <% end %>
  </div>
  <% if @user.persisted? %>
    <p>Leave empty to keep the password the same</p>
  <% end %>
  <%= f.input :password, hint: "must be 8-16 characters" %>
  <%= f.input :password_confirmation %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
