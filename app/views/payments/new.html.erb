<div class="container col-md-3">
</div>
<div class="container col-md-6">
<h1>Make a Payment</h1>

<%= form_tag paynow_payments_path(@paynow), id: "server-form",html: {class: "form-horizontal"} , method: :post do %>
  <%= hidden_field_tag :stripe_token %>
<% end %>

<div id="stripe-errors"></div>
<%= form_tag "", id: "stripe-form" do %>
  <div class="form-group">
    <label for="card-number">Card Number</label>
    <br>
    <input type="text" id="card-number" class="form-control">
  </div>
  <div class="form-group">
    <label for="card-number">Expiry Date</label>
    <br>
    <%= select_month(Date.today, use_month_numbers: true) %>
    <%= select_year(Date.today, start_year: Date.today.year,
                                end_year: (Date.today.year + 10)) %>
  </div>
  <div class="form-group">
    <label for="cvc">CVC</label>
    <br>
    <input type="text" id="cvc" class="form-control">
  </div>
  <br>

  <input type="submit" value="Make a Payment" id="submit-button">
<% end %>
</div>
<div class="container col-md-3">
</div>
