<div class="container" >
<h1>Contact Us Now</h1>
<%= form_tag "/contact", html: {class: "form-horizontal"} do %>
  <div>
    <%= label_tag :name %>
    <br>
    <%= text_field_tag(:name, "", {placeholder: "e.g. Tam", size:50, maxlength:60}) %>
  </div>
  <div>
    <%= label_tag :email %>
    <br>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :message %>
    <br>
    <%= text_area_tag :message %>
  </div>
  <br>

  <%= submit_tag %>
<% end %>
</div>
