<h1>Contact Us Now</h1>
<%= form_tag "/contact" do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag(:name, "", {placeholder: "e.g. Tam"}) %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :message %>
    <%= text_area_tag :message %>
  </div>
  <%= submit_tag %>
<% end %>
